{
  "name": "@foxycorps/mic-drop",
  "version": "0.1.2",
  "description": "A modern, browser-compatible library for capturing microphone audio streams",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "pkgroll",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/foxycorps/mic-drop.git"
  },
  "homepage": "https://github.com/foxycorps/mic-drop",
  "bugs": {
    "url": "https://github.com/foxycorps/mic-drop/issues"
  },
  "keywords": [
    "microphone",
    "audio",
    "stream",
    "browser",
    "webrtc",
    "webaudio"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@types/web": "^0.0.143",
    "jsdom": "^24.1.3",
    "pkgroll": "^2.11.2",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  },
  "sideEffects": false
}
